import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        
        Scanner sc=new Scanner(System.in);
        String A=sc.next();
        String B=sc.next();
        sc.close();
        
        //length of string A & B
        int lenA = A.length();
        int lenB = B.length();
        
        //print sum of string length A & B
        System.out.println(lenA + lenB);
        
        //compare A & B lexicographicaly
        System.out.println( A.compareTo(B) > 0 ? "Yes" : "No" );
        
        //captilize first letter A & B
        System.out.println( A.substring( 0, 1).toUpperCase().concat(A.substring(1)) + " " + B.substring( 0, 1).toUpperCase().concat(B.substring(1)));
    }
}
